<section class="px-4 py-2">
    <div class="border border-dark">
        <h2 class="bg-dark px-3 py-2 text-info">Create New Post</h2>
        <form class="add-post-form px-3 py-1 d-flex flex-column text-dark">
            <div class="my-1 d-flex flex-column">
                <label for="new-title">Title</label>
                <input type="text" id="new-title" name="new-title" />
            </div>
            <div class="my-1 d-flex flex-column">
                <label for="new-content">Content</label> 
                <input type="text" id="new-content" name="new-content" />
            </div>
            <button type="submit" id="add-post" data-user="{{session_userId}}" class="my-2">Create</button>
        </form>
    </div>
</section>

<script src="/javascript/add-post.js"></script>